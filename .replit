modules = ["rust-stable"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "roblox_browser_server"

[[workflows.workflow]]
name = "roblox_browser_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run --release"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["cargo", "run", "--release"]
